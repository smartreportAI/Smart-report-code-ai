<div class="full-report-dynamic-section">
  <h2 class="section-title">Full Report</h2>
  {{#each profiles}}
  <div class="profile-section">
    <div class="profile-header">
      <h3 class="profile-name">{{displayName}}</h3>
      <span class="status-badge status-{{overallStatus}}">{{overallStatus}}</span>
    </div>

    {{#each abnormalTests}}
    <div class="test-card test-card-{{colorIndicator}}">
      <div class="test-info">
        <p class="test-name">{{standardName}}</p>
        <p class="test-unit">{{unit}}</p>
      </div>
      <div class="test-value-col">
        <p class="test-value test-value-{{colorIndicator}}">{{value}}</p>
      </div>
      <div class="test-slider-col">
        {{{slider sliderPosition colorIndicator referenceRange}}}
      </div>
      <div class="test-status-col">
        <span class="status-badge status-{{colorIndicator}}">{{colorIndicator}}</span>
      </div>
    </div>
    {{#if content.tip}}
    <div class="test-tip">&#9432; {{content.tip}}</div>
    {{/if}}
    {{/each}}

    {{#each normalTests}}
    <div class="compact-test-row">
      <span class="compact-test-name">{{standardName}}</span>
      <span class="compact-test-value">{{value}} {{unit}}</span>
      <span class="status-badge status-normal">normal</span>
    </div>
    {{/each}}

    {{#if (eq (length abnormalTests) 0)}}
    {{#if (eq (length normalTests) 0)}}
    <p class="profile-empty">No test data for this profile.</p>
    {{/if}}
    {{/if}}
  </div>
  {{/each}}
</div>
